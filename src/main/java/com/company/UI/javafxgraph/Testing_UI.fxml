<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.111"
            fx:controller="com.company.UI.EPKUI.UI_TEST_EPK">
   <top>
      <VBox maxHeight="150.0" maxWidth="590.0" minHeight="150.0" minWidth="590.0" prefHeight="150.0" prefWidth="590.0"
            BorderPane.alignment="CENTER">
         <children>
            <TextArea editable="false" maxHeight="80.0" minHeight="95.0" minWidth="580.0"
                      text="This window provides a testing service for your designed EPC. &#10;On the lower part of this window you should see a list of found errors. &#10;It is highly recommended to fix all errors before starting your simulation &#10;(although not all errors result in a poor simulation). &#10;If the list is empty there are no found errors and your simulation should run perfectly.">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </VBox.margin>
               <font>
                  <Font name="Arial" size="12.0"/>
               </font>
            </TextArea>
         </children>
      </VBox>
   </top>
   <bottom>
      <ButtonBar maxHeight="35.0" maxWidth="590.0" minHeight="35.0" minWidth="590.0" prefHeight="35.0" prefWidth="590.0"
                 BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="OK_Button" mnemonicParsing="false" onAction="#actionPerformed" text="OK"/>
         </buttons>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <center>
      <VBox fx:id="Error_Box" maxHeight="315.0" maxWidth="590.0" minHeight="315.0" minWidth="590.0" prefHeight="315.0"
            prefWidth="590.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
